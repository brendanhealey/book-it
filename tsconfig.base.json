{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "importHelpers": true,
    "paths": {
      // paths are relative to location of extend'ing tsconfig + baseUrl !!
      "component-lib": ["../../component-lib/src"],
      "react-client": ["../../react-client/src"],
      "server": ["../../server/src"]
    }
  }
  // "references": [
  //   { "path": "./packages/component-lib" },
  //   { "path": "./packages/server" }
  // ]
}
