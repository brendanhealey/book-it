{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "esnext",
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".vscode/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
