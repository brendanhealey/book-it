{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "esnext",
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "types": ["node"],
    "composite": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/server.mjs"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
